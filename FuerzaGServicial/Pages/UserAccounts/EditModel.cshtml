@page
@model EditModel
@{
    ViewData["Title"] = "Editar Usuario";
}
<div class="container mt-4 mb-5">
    <h2 class="mb-3">Editar Usuario</h2>

    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""]?.Errors.Any() == true)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h6 class="alert-heading mb-2"><i class="fas fa-exclamation-triangle"></i> Errores generales:</h6>
            <ul class="mb-0 small">
                @foreach (var error in ViewData.ModelState[""].Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" class="card card-body shadow-sm" id="userAccountForm" novalidate>
        <input type="hidden" asp-for="UserAccount.Id" />

        @await Html.PartialAsync("_UserAccountFields")

        <div class="col-md-6">
            <label asp-for="UserAccount.Role" class="form-label">Rol *</label>
            <select asp-for="UserAccount.Role" class="form-select">
                <option value="">Seleccione un rol</option>
                <option value="CEO" selected="@(Model.UserAccount.Role == "CEO")">Propietario</option>
                <option value="Manager" selected="@(Model.UserAccount.Role == "Manager")">Gerente</option>
            </select>
            <span asp-validation-for="UserAccount.Role" class="text-danger small"></span>
        </div>

        <div class="mt-4">
            <button type="button" class="btn btn-dark" id="btnOpenEditModal">
                <i class="fas fa-save"></i> Actualizar
            </button>
            <a asp-page="/UserAccounts/Index" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>
    </form>

    @await Html.PartialAsync("_ConfirmEditModal")
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var form = document.getElementById('userAccountForm');

            $('input[type="tel"]').on('keypress', function (e) {
                if (e.which < 48 || e.which > 57) e.preventDefault();
            });

            $('input[type="tel"]').on('input', function () {
                if (this.value.length > 8) this.value = this.value.slice(0, 8);
            });

            $('#btnOpenEditModal').on('click', function () {
                if (form.checkValidity()) {
                    var modal = new bootstrap.Modal(document.getElementById('confirmEditModal'));
                    modal.show();
                } else {
                    form.classList.add('was-validated');
                }
            });

            $('#confirmEditBtn').on('click', function () {
                const confirmBtn = $(this);
                confirmBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Guardando...');
                var modal = bootstrap.Modal.getInstance(document.getElementById('confirmEditModal'));
                modal.hide();
                form.submit();
            });
        });
    </script>
}
