@page
@model FuerzaGServicial.Pages.UserAccounts.EditModel
@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-4 mb-5">
    <h2 class="mb-3">Editar Usuario</h2>

    @if (Model.ValidationErrors.Any())
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h6 class="alert-heading mb-2"><i class="fas fa-exclamation-triangle me-1"></i> Errores de validación:</h6>
            <ul class="mb-0 small">
                @foreach (var error in Model.ValidationErrors)
                {
                    <li>@error</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    <form method="post" class="card card-body shadow-sm" id="userAccountForm" novalidate>
        <input type="hidden" asp-for="UserAccount.Id" />

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="UserAccount.Name" class="form-label">Nombre *</label>
                <input asp-for="UserAccount.Name" class="form-control" placeholder="Ingrese el nombre" required minlength="3" maxlength="100" pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñüÜ\s'-]+$" />
                <div class="invalid-feedback">El nombre debe tener al menos 3 caracteres y solo letras.</div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.FirstLastName" class="form-label">Apellido Paterno *</label>
                <input asp-for="UserAccount.FirstLastName" class="form-control" placeholder="Ingrese apellido paterno" required minlength="2" maxlength="100" pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñüÜ\s'-]+$" />
                <div class="invalid-feedback">El apellido paterno debe tener al menos 2 caracteres y solo letras.</div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.SecondLastName" class="form-label">Apellido Materno</label>
                <input asp-for="UserAccount.SecondLastName" class="form-control" placeholder="Ingrese apellido materno (opcional)" minlength="2" maxlength="100" pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñüÜ\s'-]*$" />
                <div class="invalid-feedback">El apellido materno debe tener al menos 2 caracteres y solo letras.</div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.PhoneNumber" class="form-label">Teléfono *</label>
                <input asp-for="UserAccount.PhoneNumber" type="tel" placeholder="Ej: 76543210" required pattern="[0-9]{8}" class="form-control" />
                <div class="invalid-feedback">El teléfono debe tener exactamente 8 dígitos.</div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.Email" class="form-label">Correo Electrónico *</label>
                <input asp-for="UserAccount.Email" type="email" required maxlength="255" placeholder="ejemplo@correo.com" class="form-control" />
                <div class="invalid-feedback">Ingrese un correo electrónico válido.</div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.DocumentNumber" class="form-label">CI / Documento *</label>
                <input asp-for="UserAccount.DocumentNumber" type="text" minlength="6" maxlength="9" pattern="[0-9]{6,9}" placeholder="Ej: 1234567" required class="form-control" />
                <div class="invalid-feedback">El CI debe contener entre 6 y 9 dígitos.</div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.Role" class="form-label">Rol *</label>
                <select asp-for="UserAccount.Role" class="form-select" required>
                    <option value="">-- Seleccione un rol --</option>
                    <option value="CEO">Propietario</option>
                    <option value="Manager">Gerente</option>
                </select>
                <div class="invalid-feedback">Seleccione un rol.</div>
            </div>

            <div class="col-md-6 mt-3">
                <label asp-for="UserAccount.UserName" class="form-label">Nombre de Usuario</label>
                <input asp-for="UserAccount.UserName" class="form-control" readonly />
            </div>
        </div>

        <div class="mt-4">
            <button type="button" class="btn btn-dark" id="btnGuardar">
                <i class="fas fa-save me-1"></i> Actualizar
            </button>
            <a asp-page="/UserAccounts/UserPage" class="btn btn-outline-secondary">
                <i class="fas fa-times me-1"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('userAccountForm');
            const btnGuardar = document.getElementById('btnGuardar');
            const inputs = Array.from(form.querySelectorAll('input, select'));

            inputs.forEach(input => {
                input.addEventListener('input', function () {
                    this.classList.remove('is-invalid', 'is-valid');
                });
            });

            btnGuardar.addEventListener('click', function () {
                let valid = true;

                inputs.forEach(input => {
                    input.classList.remove('is-invalid', 'is-valid');
                    const value = input.value.trim();
                    const pattern = input.getAttribute('pattern') ? new RegExp(input.getAttribute('pattern')) : null;

                    if (input.id === 'UserAccount_SecondLastName') {
                        if (value) { 
                            if ((input.minLength && value.length < parseInt(input.minLength)) || (pattern && !pattern.test(value))) {
                                valid = false;
                                input.classList.add('is-invalid');
                            } else {
                                input.classList.add('is-valid');
                            }
                        }
                        return; 
                    }

                    if (input.hasAttribute('required') && !value) {
                        valid = false;
                        input.classList.add('is-invalid');
                    } else if (pattern && value && !pattern.test(value)) {
                        valid = false;
                        input.classList.add('is-invalid');
                    } else if (input.minLength && value.length < parseInt(input.minLength)) {
                        valid = false;
                        input.classList.add('is-invalid');
                    } else {
                        input.classList.add('is-valid');
                    }
                });

                if (valid) {
                    btnGuardar.disabled = true;
                    btnGuardar.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Actualizando...';
                    form.submit();
                } else {
                    form.classList.add('was-validated');
                }
            });
        });
    </script>
}