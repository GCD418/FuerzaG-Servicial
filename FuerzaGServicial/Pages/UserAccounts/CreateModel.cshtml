@page
@model CreateModel
@{
    ViewData["Title"] = "Nuevo Usuario";
}

<div class="container mt-4 mb-5">
    <h2>Nuevo Usuario</h2>

    @if (Model.ValidationErrors?.Any() == true)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h6 class="alert-heading mb-2"><i class="fas fa-exclamation-triangle"></i> Errores generales:</h6>
            <ul class="mb-0 small">
                @foreach (var error in Model.ValidationErrors)
                {
                    <li>@error</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" class="card card-body shadow-sm" id="userAccountForm" novalidate>
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="UserAccount.Name" class="form-label">Nombre *</label>
                <input asp-for="UserAccount.Name" class="form-control" placeholder="Ingrese el nombre"
                       required minlength="3" maxlength="100"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]+$"
                       title="Solo letras y espacios. No se permiten números ni símbolos." />
                <div class="invalid-feedback">
                    El nombre debe tener al menos 3 caracteres y solo letras.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.FirstLastName" class="form-label">Apellido Paterno *</label>
                <input asp-for="UserAccount.FirstLastName" class="form-control" placeholder="Ingrese apellido paterno"
                       required minlength="2" maxlength="100"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]+$"
                       title="Solo letras y espacios. No se permiten números ni símbolos." />
                <div class="invalid-feedback">
                    El apellido paterno debe tener al menos 2 caracteres y solo letras.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.SecondLastName" class="form-label">Apellido Materno</label>
                <input asp-for="UserAccount.SecondLastName" class="form-control" placeholder="Ingrese apellido materno (opcional)"
                       minlength="2" maxlength="100"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]+$"
                       title="Si lo rellena, use solo letras y espacios" />
                <div class="invalid-feedback">
                    El apellido materno debe tener al menos 2 caracteres y solo letras.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.PhoneNumber" class="form-label">Teléfono *</label>
                <input asp-for="UserAccount.PhoneNumber" class="form-control" placeholder="Ej: 76543210"
                       type="tel" pattern="[0-9]{8}" required
                       value="@(Model.UserAccount.PhoneNumber == 0 ? "" : Model.UserAccount.PhoneNumber.ToString())" />
                <div class="invalid-feedback">
                    El teléfono debe tener exactamente 8 dígitos.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.Email" class="form-label">Correo Electrónico *</label>
                <input asp-for="UserAccount.Email" class="form-control" placeholder="ejemplo@correo.com"
                       type="email" required maxlength="255" />
                <div class="invalid-feedback">
                    Ingrese un correo electrónico válido.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.DocumentNumber" class="form-label">CI / Documento *</label>
                <input asp-for="UserAccount.DocumentNumber" class="form-control" placeholder="Ej: 1234567"
                       type="text" minlength="6" maxlength="9" pattern="[0-9]{6,9}" required />
                <div class="invalid-feedback">
                    El CI debe contener entre 6 y 9 dígitos.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.Role" class="form-label">Rol *</label>
                <select asp-for="UserAccount.Role" class="form-select" required>
                    <option value="">-- Seleccione un rol --</option>
                    <option value="CEO">Propietario</option>
                    <option value="Manager">Gerente</option>
                </select>
                <div class="invalid-feedback">
                    Seleccione un rol.
                </div>
            </div>

            <div class="col-md-6 mt-3">
                <label asp-for="UserAccount.UserName" class="form-label">Nombre de Usuario</label>
                <input asp-for="UserAccount.UserName" class="form-control" readonly placeholder="Se generará automáticamente" />
            </div>
        </div>

        <div class="mt-4">
            <button type="button" class="btn btn-dark" id="btnOpenModal">
                <i class="fas fa-save me-1"></i> Guardar
            </button>
            <a asp-page="/UserAccounts/UserPage" class="btn btn-outline-secondary">
                <i class="fas fa-times me-1"></i> Cancelar
            </a>
        </div>

        <div class="mt-3">
            <small class="text-muted">* Campos obligatorios</small>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('userAccountForm');
            const btnGuardar = document.getElementById('btnOpenModal');

            const nombreInput = document.getElementById("UserAccount_Name");
            const apellidoInput = document.getElementById("UserAccount_FirstLastName");
            const segundoApellidoInput = document.getElementById("UserAccount_SecondLastName");
            const docInput = document.getElementById("UserAccount_DocumentNumber");
            const phoneInput = document.getElementById("UserAccount_PhoneNumber");
            const usernameInput = document.getElementById("UserAccount_UserName");
            const roleSelect = document.getElementById("UserAccount_Role");
            const emailInput = document.getElementById("UserAccount_Email");

            const inputs = [nombreInput, apellidoInput, segundoApellidoInput, docInput, phoneInput, emailInput, roleSelect];

            // Validar solo números en teléfono y documento
            [phoneInput, docInput].forEach(input => {
                input.addEventListener('keypress', function (e) {
                    if (e.which < 48 || e.which > 57) e.preventDefault();
                });
                input.addEventListener('input', function () {
                    const max = input === phoneInput ? 8 : 9;
                    if (this.value.length > max) this.value = this.value.slice(0, max);
                });
            });

            // Validar solo letras y espacios
            function letraYCaracteresPermitidos(e) {
                const allowed = /^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]$/;
                const ch = String.fromCharCode(e.which);
                if (!allowed.test(ch) && e.which !== 8 && e.which !== 0) e.preventDefault();
            }
            [nombreInput, apellidoInput, segundoApellidoInput].forEach(input => input.addEventListener('keypress', letraYCaracteresPermitidos));

            // Generar nombre de usuario dinámicamente
            function generarUsername() {
                const nombre = nombreInput?.value.trim().toLowerCase() || "";
                const apellido = apellidoInput?.value.trim().toLowerCase() || "";
                const doc = docInput?.value.trim() || "";
                usernameInput.value = (nombre && apellido && doc.length >= 3)
                    ? `${nombre.charAt(0)}.${apellido}${doc.slice(-3)}`
                    : "";
            }
            [nombreInput, apellidoInput, docInput].forEach(el => el && el.addEventListener("input", generarUsername));

            // Limpiar clases al escribir
            inputs.forEach(input => {
                input.addEventListener('input', function () {
                    this.classList.remove('is-invalid', 'is-valid');
                });
            });

            // Click en botón Guardar
            btnGuardar.addEventListener('click', function () {
                let valid = true;

                inputs.forEach(input => {
                    input.classList.remove('is-invalid', 'is-valid');
                    const value = input.value.trim();
                    const pattern = input.getAttribute('pattern') ? new RegExp(input.getAttribute('pattern')) : null;

                    // Validación opcional para Apellido Materno
                    if (input.id === 'UserAccount_SecondLastName') {
                        if (value) {
                            if ((input.minLength && value.length < parseInt(input.minLength)) || (pattern && !pattern.test(value))) {
                                valid = false;
                                input.classList.add('is-invalid');
                            } else {
                                input.classList.add('is-valid');
                            }
                        }
                        return;
                    }

                    // Validación general
                    if (input.hasAttribute('required') && !value) {
                        valid = false;
                        input.classList.add('is-invalid');
                    } else if (pattern && value && !pattern.test(value)) {
                        valid = false;
                        input.classList.add('is-invalid');
                    } else if (input.minLength && value.length < parseInt(input.minLength)) {
                        valid = false;
                        input.classList.add('is-invalid');
                    } else {
                        input.classList.add('is-valid');
                    }
                });

                if (valid) {
                    btnGuardar.disabled = true;
                    btnGuardar.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Guardando...';
                    form.submit();
                } else {
                    form.classList.add('was-validated');
                }
            });
        });
    </script>
}
