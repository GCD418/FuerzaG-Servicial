@page
@model UserAccountService.Pages.UserAccounts.CreateModel
@{
    ViewData["Title"] = "Nuevo Usuario";
}

<div class="container mt-4 mb-5">
    <h2>Nuevo Usuario</h2>

    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""]?.Errors.Any() == true)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h6 class="alert-heading mb-2">
                <i class="fas fa-exclamation-triangle"></i> Errores generales:
            </h6>
            <ul class="mb-0 small">
                @foreach (var error in ViewData.ModelState[""].Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" class="card card-body shadow-sm" id="userAccountForm" novalidate>
        <div class="row g-3">

            <div class="col-md-6">
                <label asp-for="UserAccount.Name" class="form-label">Nombre *</label>
                <input asp-for="UserAccount.Name" class="form-control" placeholder="Ingrese nombre"
                       required minlength="3" maxlength="100" />
                <span asp-validation-for="UserAccount.Name" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El nombre debe tener al menos 3 caracteres.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.FirstLastName" class="form-label">Primer Apellido *</label>
                <input asp-for="UserAccount.FirstLastName" class="form-control" placeholder="Ingrese primer apellido"
                       required minlength="2" maxlength="100" />
                <span asp-validation-for="UserAccount.FirstLastName" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El primer apellido debe tener al menos 2 caracteres.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.SecondLastName" class="form-label">Segundo Apellido</label>
                <input asp-for="UserAccount.SecondLastName" class="form-control"
                       placeholder="Ingrese segundo apellido (opcional)" minlength="2" maxlength="100" />
                <span asp-validation-for="UserAccount.SecondLastName" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El segundo apellido debe tener al menos 2 caracteres.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.Email" class="form-label">Correo Electrónico *</label>
                <input asp-for="UserAccount.Email" class="form-control" type="email"
                       placeholder="ejemplo@correo.com" required maxlength="255" />
                <span asp-validation-for="UserAccount.Email" class="text-danger small"></span>
                <div class="invalid-feedback">
                    Ingrese un correo electrónico válido.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.PhoneNumber" class="form-label">Teléfono *</label>
                <input asp-for="UserAccount.PhoneNumber" class="form-control" placeholder="Ej: 76543210"
                       type="tel" pattern="[0-9]{8}" required value="" />
                <span asp-validation-for="UserAccount.PhoneNumber" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El teléfono debe tener exactamente 8 dígitos.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.DocumentNumber" class="form-label">Documento de Identidad *</label>
                <input asp-for="UserAccount.DocumentNumber" class="form-control" placeholder="Ej: 1234567"
                       type="text" minlength="6" maxlength="9" pattern="[0-9]{6,9}" required />
                <span asp-validation-for="UserAccount.DocumentNumber" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El documento debe contener entre 6 y 9 dígitos.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.Role" class="form-label">Rol *</label>
                <select asp-for="UserAccount.Role" class="form-select" required>
                    <option value="">Seleccione un rol...</option>
                    <option value="CEO" selected="@(Model.UserAccount.Role == "CEO")">Propietario</option>
                    <option value="Manager" selected="@(Model.UserAccount.Role == "Manager")">Gerente</option>
                </select>
                <span asp-validation-for="UserAccount.Role" class="text-danger small"></span>
                <div class="invalid-feedback">
                    Seleccione un rol válido.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="UserAccount.UserName" class="form-label">Nombre de Usuario</label>
                <input asp-for="UserAccount.UserName" class="form-control" readonly disabled
                       placeholder="Se generará automáticamente" />
            </div>

        </div>

        <div class="mt-4">
            <button type="button" class="btn btn-dark" id="btnOpenModal">
                <i class="fas fa-save"></i> Guardar
            </button>
            <a asp-page="/UserAccounts/Index" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>

        <div class="mt-3">
            <small class="text-muted">* Campos obligatorios</small>
        </div>
    </form>

    @await Html.PartialAsync("_ConfirmSaveModal")
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            const form = document.getElementById('userAccountForm');

            $('#btnOpenModal').on('click', function () {
                if (form.checkValidity()) {
                    var modal = new bootstrap.Modal(document.getElementById('confirmSaveModal'));
                    modal.show();
                } else {
                    form.classList.add('was-validated');
                }
            });

            $('#confirmSaveBtn').on('click', function () {
                const confirmBtn = $(this);
                confirmBtn.prop('disabled', true)
                    .html('<i class="fas fa-spinner fa-spin"></i> Guardando...');
                var modal = bootstrap.Modal.getInstance(document.getElementById('confirmSaveModal'));
                modal.hide();
                form.submit();
            });

            const nombreInput = document.getElementById("UserAccount_Name");
            const apellidoInput = document.getElementById("UserAccount_FirstLastName");
            const docInput = document.getElementById("UserAccount_DocumentNumber");
            const usernameInput = document.getElementById("UserAccount_UserName");

            function generarUsername() {
                const nombre = nombreInput.value.trim().toLowerCase();
                const apellido = apellidoInput.value.trim().toLowerCase();
                const doc = docInput.value.trim();

                if (nombre && apellido && doc.length >= 3) {
                    const primeraLetra = nombre.charAt(0);
                    const ultimos3 = doc.slice(-3);
                    usernameInput.value = `${primeraLetra}.${apellido}${ultimos3}`;
                } else {
                    usernameInput.value = "";
                }
            }

            nombreInput.addEventListener("input", generarUsername);
            apellidoInput.addEventListener("input", generarUsername);
            docInput.addEventListener("input", generarUsername);

            $('input[type="tel"], input[asp-for="UserAccount.DocumentNumber"]').on('keypress', function (e) {
                if (e.which < 48 || e.which > 57) e.preventDefault();
            });

            $('input[type="tel"]').on('input', function () {
                if (this.value.length > 8) this.value = this.value.slice(0, 8);
            });

            $('input[asp-for="UserAccount.DocumentNumber"]').on('input', function () {
                if (this.value.length > 9) this.value = this.value.slice(0, 9);
            });

        });
    </script>
}
