@page
@model CreateModel
@{
    ViewData["Title"] = "Crear Técnico";
}

<div class="container mt-4 mb-5">
    <h2>Nuevo Técnico</h2>

    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""]?.Errors.Any() == true)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h6 class="alert-heading mb-2"><i class="fas fa-exclamation-triangle"></i> Errores generales:</h6>
            <ul class="mb-0 small">
                @foreach (var error in ViewData.ModelState[""].Errors)
                {
                    <li>@error</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" class="card card-body shadow-sm" id="technicianForm" novalidate>
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Form.Name" class="form-label">Nombre *</label>
                <div class="input-group has-validation position-relative">
                    <input asp-for="Form.Name" class="form-control" placeholder="Ingrese nombre"
                           required minlength="3" maxlength="100"
                           pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]+$"
                           title="Solo se permiten letras y espacios." />
                    <span class="valid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-success d-none"><i class="fas fa-check-circle"></i></span>
                    <span class="invalid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-danger d-none"><i class="fas fa-times-circle"></i></span>
                    <div class="invalid-feedback">
                        El nombre debe tener al menos 3 caracteres y solo letras..
                    </div>
                </div>
                <span asp-validation-for="Form.Name" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Form.FirstLastName" class="form-label">Apellido Paterno *</label>
                <div class="input-group has-validation position-relative">
                    <input asp-for="Form.FirstLastName" class="form-control" placeholder="Ingrese apellido paterno"
                           required minlength="2" maxlength="100"
                           pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]+$"
                           title="Solo se permiten letras y espacios." />
                    <span class="valid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-success d-none"><i class="fas fa-check-circle"></i></span>
                    <span class="invalid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-danger d-none"><i class="fas fa-times-circle"></i></span>
                    <div class="invalid-feedback">
                        El apellido paterno debe tener al menos 2 caracteres y solo letras.
                    </div>
                </div>
                <span asp-validation-for="Form.FirstLastName" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Form.SecondLastName" class="form-label">Apellido Materno</label>
                <div class="input-group has-validation position-relative">
                    <input asp-for="Form.SecondLastName" class="form-control" placeholder="Ingrese apellido materno (opcional)"
                           minlength="2" maxlength="100"
                           pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]*$"
                           title="Solo se permiten letras y espacios si se llena." />
                    <span class="valid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-success d-none"><i class="fas fa-check-circle"></i></span>
                    <span class="invalid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-danger d-none"><i class="fas fa-times-circle"></i></span>
                    <div class="invalid-feedback">
                        El apellido materno debe tener al menos 2 caracteres y solo letras.
                    </div>
                </div>
                <span asp-validation-for="Form.SecondLastName" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Form.PhoneNumber" class="form-label">Teléfono *</label>
                <input asp-for="Form.PhoneNumber" class="form-control" placeholder="Ej: 76543210"
                       type="tel" pattern="[0-9]{8}" required value=""/>
                <span asp-validation-for="Form.PhoneNumber" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El teléfono debe tener exactamente 8 dígitos.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="Form.Email" class="form-label">Correo Electrónico *</label>
                <input asp-for="Form.Email" class="form-control" placeholder="ejemplo@correo.com"
                       type="email" required maxlength="255" />
                <span asp-validation-for="Form.Email" class="text-danger small"></span>
                <div class="invalid-feedback">
                    Ingrese un correo electrónico válido.
                </div>
            </div>

            <div class="col-md-6">
                <div class="row g-2 align-items-start">
                    <div class="col-md-8">
                        <label asp-for="Form.DocumentNumber" class="form-label">CI *</label>
                        <input asp-for="Form.DocumentNumber" class="form-control" placeholder="Ej: 1234567"
                               type="text" minlength="6" maxlength="10" pattern="[0-9]{6,10}" required/>
                        <span asp-validation-for="Form.DocumentNumber" class="text-danger small"></span>
                        <div class="invalid-feedback">
                            El CI debe contener entre 6 y 10 dígitos.
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Form.DocumentExtension" class="form-label">Complemento</label>
                        <input asp-for="Form.DocumentExtension" id="Form_Complement" class="form-control" placeholder="Ej: 1A"
                               maxlength="2" minlength="2" pattern="^[1-9][A-Z]$"
                               title="Formato: dígito 1-9 seguido de letra mayúscula (ej. 1A)" />
                        <span asp-validation-for="Form.DocumentExtension" class="text-danger small"></span>
                        <div class="invalid-feedback">
                            Formato: dígito 1-9 seguido de letra mayúscula.
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="Form.BaseSalary" class="form-label">Salario Base *</label>
                <div class="input-group has-validation position-relative">
                    <input asp-for="Form.BaseSalary" class="form-control" placeholder="Ej: 2500.00"
                           required pattern="^\d+(\.\d{1,2})?$"
                           title="Solo se permiten números y un punto decimal (hasta dos decimales)."
                           inputmode="decimal" />
                    <span class="valid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-success d-none">
                        <i class="fas fa-check-circle"></i>
                    </span>
                    <span class="invalid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-danger d-none">
                        <i class="fas fa-times-circle"></i>
                    </span>
                    <div class="invalid-feedback">
                        Ingrese un salario válido mayor a 0 con hasta 2 decimales.
                    </div>
                </div>
                <span asp-validation-for="Form.BaseSalary" class="text-danger small"></span>
            </div>

            <div class="col-12">
                <label asp-for="Form.Address" class="form-label">Dirección *</label>
                <textarea asp-for="Form.Address" class="form-control" rows="2" placeholder="Ingrese la dirección completa"
                          required minlength="5" maxlength="200"></textarea>
                <span asp-validation-for="Form.Address" class="text-danger small"></span>
                <div class="invalid-feedback">
                    La dirección debe tener al menos 5 caracteres y no más de 200.
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button type="button" class="btn btn-dark" id="btnOpenModal">
                <i class="fas fa-save"></i> Guardar
            </button>
            <a asp-page="/Technicians/TechnicianPage" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>

        <div class="mt-3">
            <small class="text-muted">* Campos obligatorios</small>
        </div>
    </form>

    @await Html.PartialAsync("_ConfirmSaveModal")
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const form = document.getElementById('technicianForm');

            $('input[type="tel"], input[asp-for="Form.DocumentNumber"]').on('keypress', function (e) {
                if (e.which < 48 || e.which > 57) e.preventDefault();
            });

            $('input[type="tel"]').on('input', function () {
                if (this.value.length > 8) this.value = this.value.slice(0, 8);
            });
            $('input[asp-for="Form.DocumentNumber"]').on('input', function () {
                if (this.value.length > 10) this.value = this.value.slice(0, 10);
            });

            function letraPermitida(e) {
                const allowed = /^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]$/;
                const ch = String.fromCharCode(e.which);
                if (!allowed.test(ch) && e.which !== 8 && e.which !== 0) e.preventDefault();
            }

            const nameInput = document.getElementById("Form_Name");
            const firstLastNameInput = document.getElementById("Form_FirstLastName");
            const secondLastNameInput = document.getElementById("Form_SecondLastName");

            [nameInput, firstLastNameInput, secondLastNameInput].forEach(el => el && el.addEventListener("keypress", letraPermitida));

            const baseSalaryInput = document.getElementById("Form_BaseSalary");

            if (baseSalaryInput) {
                baseSalaryInput.addEventListener("keypress", function (e) {
                    const ch = String.fromCharCode(e.which);
                    const allowed = /^[0-9.]$/;

                    if (!allowed.test(ch) && e.which !== 8 && e.which !== 0) {
                        e.preventDefault();
                        return;
                    }

                    if (ch === '.' && this.value.includes('.')) {
                        e.preventDefault();
                    }
                });

                baseSalaryInput.addEventListener("input", function () {
                    const match = this.value.match(/^(\d+(\.\d{0,2})?)?/);
                    if (match) this.value = match[0];
                });
            }

            $('input, textarea').on('input', function () {
                const field = $(this);
                const validIcon = field.siblings('.valid-icon');
                const invalidIcon = field.siblings('.invalid-icon');

                if (this.checkValidity()) {
                    field.removeClass('is-invalid').addClass('is-valid');
                    validIcon.removeClass('d-none');
                    invalidIcon.addClass('d-none');
                } else {
                    field.removeClass('is-valid').addClass('is-invalid');
                    validIcon.addClass('d-none');
                    invalidIcon.removeClass('d-none');
                }
            });

            $('#btnOpenModal').on('click', function () {
                if (form.checkValidity()) {
                    var modal = new bootstrap.Modal(document.getElementById('confirmSaveModal'));
                    modal.show();
                } else {
                    form.classList.add('was-validated');
                }
            });

            $('#confirmSaveBtn').on('click', function () {
                const confirmBtn = $(this);
                confirmBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Guardando...');
                const modal = bootstrap.Modal.getInstance(document.getElementById('confirmSaveModal'));
                modal.hide();
                form.submit();
            });
            
        const complementInput = document.getElementById("Form_Complement");

        if (complementInput) {
            complementInput.addEventListener("keypress", function (e) {
                const pos = this.value.length;
                const ch = String.fromCharCode(e.which || e.keyCode);
                if (pos === 0) {
                    if (!/^[1-9]$/.test(ch)) e.preventDefault();
                } else if (pos === 1) {
                    if (!/^[A-Za-z]$/.test(ch)) e.preventDefault();
                } else {
                    e.preventDefault();
                }
            });

            complementInput.addEventListener("input", function () {
                this.value = this.value.slice(0, 2);

                const v = this.value;
                let out = "";
                if (v.length > 0 && /^[1-9]$/.test(v[0])) out += v[0];
                if (v.length > 1 && /^[A-Z]$/.test(v[1])) out += v[1];
                if (this.value !== out) this.value = out;
            });
            
        }
        });
    </script>
}
