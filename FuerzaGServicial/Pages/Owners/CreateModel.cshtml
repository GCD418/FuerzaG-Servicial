@page
@model FuerzaGServicial.Pages.Owners.CreateModel
@{
    ViewData["Title"] = "Nuevo Dueño";
}
<div class="container mt-4 mb-5">
    <h2>Nuevo Dueño</h2>

    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""]?.Errors.Any() == true)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h6 class="alert-heading mb-2"><i class="fas fa-exclamation-triangle"></i> Errores generales:</h6>
            <ul class="mb-0 small">
                @foreach (var error in ViewData.ModelState[""].Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" class="card card-body shadow-sm" id="ownerForm" novalidate>
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Owner.Name" class="form-label">Nombre *</label>
                <input asp-for="Owner.Name" class="form-control" placeholder="Ingrese el nombre"
                       required minlength="3" maxlength="100"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñüÜ\s]+$"
                       title="Solo letras y espacios. No se permiten números ni símbolos." />
                <span asp-validation-for="Owner.Name" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El nombre debe tener al menos 3 caracteres y solo letras.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="Owner.FirstLastname" class="form-label">Apellido Paterno *</label>
                <input asp-for="Owner.FirstLastname" class="form-control" placeholder="Ingrese apellido paterno"
                       required minlength="2" maxlength="100"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñüÜ\s]+$"
                       title="Solo letras y espacios. No se permiten números ni símbolos." />
                <span asp-validation-for="Owner.FirstLastname" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El apellido paterno debe tener al menos 2 caracteres y solo letras.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="Owner.SecondLastname" class="form-label">Apellido Materno</label>
                <input asp-for="Owner.SecondLastname" class="form-control" placeholder="Ingrese apellido materno (opcional)"
                       minlength="2" maxlength="100"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñüÜ\s]*$"
                       title="Solo letras y espacios. No se permiten números ni símbolos." />
                <span asp-validation-for="Owner.SecondLastname" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El apellido materno debe tener al menos 2 caracteres y solo letras.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="Owner.PhoneNumber" class="form-label">Teléfono *</label>
                <input asp-for="Owner.PhoneNumber" class="form-control" placeholder="Ej: 76543210"
                       type="tel" pattern="[0-9]{8}" required
                       value="@(Model.Owner.PhoneNumber == 0 ? "" : Model.Owner.PhoneNumber.ToString())" />
                <span asp-validation-for="Owner.PhoneNumber" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El teléfono debe tener exactamente 8 dígitos.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="Owner.Email" class="form-label">Correo Electrónico *</label>
                <input asp-for="Owner.Email" class="form-control" placeholder="ejemplo@correo.com"
                       type="email" required maxlength="255" />
                <span asp-validation-for="Owner.Email" class="text-danger small"></span>
                <div class="invalid-feedback">
                    Ingrese un correo electrónico válido.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="Owner.Ci" class="form-label">Carnet de Identidad *</label>
                <input asp-for="Owner.Ci" class="form-control" placeholder="Ej: 1234567"
                       type="text" minlength="6" maxlength="9" pattern="[0-9]{6,9}" required />
                <span asp-validation-for="Owner.Ci" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El CI debe contener entre 6 y 9 dígitos.
                </div>
            </div>

            <div class="col-12">
                <label asp-for="Owner.Address" class="form-label">Dirección *</label>
                <textarea asp-for="Owner.Address" class="form-control" rows="2"
                          placeholder="Ingrese la dirección completa"
                          required minlength="5" maxlength="100"></textarea>
                <span asp-validation-for="Owner.Address" class="text-danger small"></span>
                <div class="invalid-feedback">
                    La dirección debe tener al menos 5 caracteres y máximo 100.
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button type="button" class="btn btn-dark" id="btnOpenModal">
                <i class="fas fa-save"></i> Guardar
            </button>
            <a asp-page="/Owners/OwnerPage" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>

        <div class="mt-3">
            <small class="text-muted">* Campos obligatorios</small>
        </div>
    </form>

    @await Html.PartialAsync("_ConfirmSaveModal")
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var form = document.getElementById('ownerForm');

            const phoneInput = document.getElementById("Owner_PhoneNumber");
            const ciInput = document.getElementById("Owner_Ci");

            [phoneInput, ciInput].forEach(input => {
                if (input) {
                    input.addEventListener('keypress', function(e) {
                        if (e.which < 48 || e.which > 57) e.preventDefault();
                    });
                }
            });

            phoneInput?.addEventListener('input', function() {
                if (this.value.length > 8) this.value = this.value.slice(0, 8);
            });

            ciInput?.addEventListener('input', function() {
                if (this.value.length > 9) this.value = this.value.slice(0, 9);
            });

            function letraPermitida(e) {
                const allowed = /^[A-Za-zÁÉÍÓÚáéíóúÑñüÜ\s]$/;
                const ch = String.fromCharCode(e.which);
                if (!allowed.test(ch) && e.which !== 8 && e.which !== 0) e.preventDefault();
            }

            const nombreInput = document.getElementById("Owner_Name");
            const apellidoInput = document.getElementById("Owner_FirstLastname");
            const segundoApellidoInput = document.getElementById("Owner_SecondLastname");

            [nombreInput, apellidoInput, segundoApellidoInput].forEach(el => el && el.addEventListener("keypress", letraPermitida));

            $('#btnOpenModal').on('click', function() {
                if (form.checkValidity()) {
                    var modal = new bootstrap.Modal(document.getElementById('confirmSaveModal'));
                    modal.show();
                } else {
                    form.classList.add('was-validated');
                }
            });

            $('#confirmSaveBtn').on('click', function() {
                const confirmBtn = $(this);
                confirmBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Guardando...');
                const modal = bootstrap.Modal.getInstance(document.getElementById('confirmSaveModal'));
                modal.hide();
                form.submit();
            });
        });
    </script>
}
