@page
@model FuerzaGServicial.Pages.Owners.CreateModel
@{
    ViewData["Title"] = "Nuevo Dueño";
}
<div class="container mt-4 mb-5">
    <h2>Nuevo Dueño</h2>

    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""]?.Errors.Any() == true)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h6 class="alert-heading mb-2"><i class="fas fa-exclamation-triangle"></i> Errores generales:</h6>
            <ul class="mb-0 small">
                @foreach (var error in ViewData.ModelState[""].Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" class="card card-body shadow-sm" id="ownerForm" novalidate>
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Owner.Name" class="form-label">Nombre *</label>
                <input asp-for="Owner.Name" class="form-control" placeholder="Ingrese el nombre"
                       required minlength="3" maxlength="100"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñüÜ\s]+$"
                       title="Solo letras y espacios. No se permiten números ni símbolos." />
                <span asp-validation-for="Owner.Name" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El nombre debe tener al menos 3 caracteres y solo letras.
                </div>
            </div>

        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-dark" id="btnSubmit">
                <i class="fas fa-save"></i> Guardar
            </button>
            <a asp-page="/Owners/OwnerPage" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>

        <div class="mt-3">
            <small class="text-muted">* Campos obligatorios</small>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var form = document.getElementById('ownerForm');

            const phoneInput = document.getElementById("Owner_PhoneNumber");
            const ciInput = document.getElementById("Owner_Ci");

            [phoneInput, ciInput].forEach(input => {
                if (input) {
                    input.addEventListener('keypress', function (e) {
                        if (e.which < 48 || e.which > 57) e.preventDefault();
                    });
                }
            });

            phoneInput?.addEventListener('input', function () {
                if (this.value.length > 8) this.value = this.value.slice(0, 8);
            });

            ciInput?.addEventListener('input', function () {
                if (this.value.length > 9) this.value = this.value.slice(0, 9);
            });

            function letraPermitida(e) {
                const allowed = /^[A-Za-zÁÉÍÓÚáéíóúÑñüÜ\s]$/;
                const ch = String.fromCharCode(e.which);
                if (!allowed.test(ch) && e.which !== 8 && e.which !== 0) e.preventDefault();
            }

            const nombreInput = document.getElementById("Owner_Name");
            const apellidoInput = document.getElementById("Owner_FirstLastname");
            const segundoApellidoInput = document.getElementById("Owner_SecondLastname");

            [nombreInput, apellidoInput, segundoApellidoInput].forEach(el => el && el.addEventListener("keypress", letraPermitida));

            $('#btnSubmit').on('click', function (e) {
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                    form.classList.add('was-validated');
                } else {
                    form.submit();
                }
            });
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}
